<% var stacks = $.isArray(this)?this: [this] %>
<% $.each(stacks, function(index, stack) { %>
<div class="stack">
	<div class="section_head">
        <div class="hide_button section_hide"></div>
        <div class="section_title">
        	Stack
        </div>
    </div>
	<h3>Info: <span class="value"><%= stack.info %></span>&nbsp;&nbsp;&nbsp;Size: <span class="value"><%= stack.size %></span></h3>
	<table class="table table-hover table-striped table-bordered section_content" style="display:none;">
		<thead>
			<th>Stack Type</th>
			<th>Stack Size</th>
		</thead>
		<tbody>
			<% var stackinfos = $.isArray(stack.stackinfo)?stack.stackinfo : [stack.stackinfo] %>
			<% $.each(stackinfos, function(index, stackinfo) { %>
			<% if(stackinfo) { %>
			<tr>
				<td><%= stackinfo['@type'] %></td>
				<td><%= stackinfo['#text']%></td>
			</tr>
			<% } %>
			<% }) %>
		</tbody>
	</table>
</div>
<% }) %>